{
  "compilerOptions": {
    "strict": true,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["public/js/**/*.ts", "shared/**/*.ts"]
}
